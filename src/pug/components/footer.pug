footer.footer
	.footer__content.container
		.site-map
			ul.site-map__link-list
				each object, key in data.footer.site_map_links
					li
						a.site-map__link.simple-link(
							href=object.url
							data-link=key
						)
							!= object.name
				each object, key in data.header.info_links
					li
						a.site-map__link.simple-link(
							href=object.url
							data-link=key
						)
							!= object.name
		.shop-info
			a(href="tel:+74950183210").footer__phone-link 8 495 018-32-10
			a.simple-btn Заказать звонок
			p Пн-Пт: 10:00 — 20:00<br>Сб: 10:00 — 18:00<br>Вс: выходной
		.storage-info
			p Склад:<br>Москва, ул. Салтыковская, 6 стр. 11<br><a class="footer__text-link" href="mailto:zakaz@ggpromarket.ru">zakaz@ggpromarket.ru</a>
		.footer__logo
			a(href="#")
				+svg("company-logo")
			<p class="footer__text">© <span data-actual-year></span> ggpromarket.ru</p>
		ul.footer__social-links
			li
				a(href="#" title="Написать в whatsapp")
					+svg("whatsapp")
			li
				a(href="#" title="Сообщество в VK")
					+svg("vk")

			li
				a(href="#" title="Написать в telegram")
					+svg("telegram")
		a.footer__yandex-review-link(href="#" title="Оценить на яндекс маркете")
