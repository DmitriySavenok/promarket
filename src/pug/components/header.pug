		.header__logo
			a(href="#")
				+svg("company-logo")
		.header__location
			button.header__button.location-btn#location-btn
				+svg("location")
				span Москва
		.header__phone
			a(href="tel:+74950183210").header__phone-link 8 495 018-32-10
